{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "resolveJsonModule": true
  },
  "include": ["src/server/**/*", "src/common/**/*"],
  "exclude": ["node_modules", "src/react-app/**/*"]
}
